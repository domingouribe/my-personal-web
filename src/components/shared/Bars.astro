<style lang="scss">
	.Bars {
		display: flex;
		width: 2.5em;
		border: none;
		background: none;
		flex-flow: column;
		cursor: pointer;
		overflow: hidden;
		position: absolute;
		right: 2em;
		top: 0;
		z-index: 2;

		&-line {
			height: 3px;
			width: 100%;
			background-color: #fff;
			display: block;
			margin-top: 9px;
			transition: all 0.2s ease;
		}

		.TransformBars {
			span:nth-child(1) {
				transform: translateY(12px) rotate(45deg);
			}

			span:nth-child(2) {
				opacity: 0;
			}

			span:nth-child(3) {
				transform: translateY(-12px) rotate(-45deg);
			}
		}
	}
</style>
