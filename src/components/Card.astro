---
export interface Props {
	icon?: any;
	title: string;
	subTitle: string;
	description: string;
}
const { icon, title, subTitle, description } = Astro.props;
---

<div class="card">
	<i>{icon}</i>
	<h3 class="card__title">{title}</h3>
	<span class="card__subtitle"> {subTitle}</span>
	<p class="card__description">
		{description}
	</p>
</div>

<style lang="scss">
	.card {
		background-color: var(--white-25);
		padding: 2em;
		border-radius: 1em;
		display: flex;
		flex-flow: column wrap;
		width: 20em;
		flex-grow: 1;

		&__title {
			font-size: 1.5rem;
			margin: 0;
		}

		&__subtitle {
			font-style: italic;
			color: var(--main-theme-color);
		}

		&__description {
			color: var(--white);
		}
	}
</style>
